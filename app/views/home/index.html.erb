<div class="row column text-center">
<h2>Ultimos Productos</h2>
<hr>
</div>

<div class="row small-up-2 large-up-4">

  <% @latest_products.each do |product| %>
    <div class="column">
      <%= image_tag product.image.url(:home), class: 'thumbnail' %>
      <h5><%= link_to product.name, product %></h5>
      <p>Codigo:<%= product.cod %></p>
      <p><%= number_to_currency(product.price, unit: "$",separator: ",", delimiter: ".") %></p>
      <%=link_to "Comprar", product, class: "button expanded" %>
    </div>
  <% end %>

</div>

<hr>
